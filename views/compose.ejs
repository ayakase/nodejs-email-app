<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Compose new email</title>
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        .side-nav {
            width: 10rem;
            height: 100%;
            background-color: bisque;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            box-shadow: 10px 0 6px -5px rgba(98, 98, 98, 0.5);

        }

        .nav-item {
            height: 3rem;
            padding-top: 0.8rem;
            padding-bottom: 0.5rem;
            width: 100%;
            box-sizing: border-box;
            text-decoration: none;
            padding-left: 1rem;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            color: rgb(59, 59, 59);
            font-weight: bold;

        }

        .nav-item:hover {
            background-color: #8a8583;
            color: white;
        }

        .sign-out-btn {
            /* margin-left: auto; */
            height: 2rem;
            position: absolute;
            right: 1rem;
            border: none;
            padding: 0.2rem;
            background-color: rgb(255, 0, 0);
            color: white;
            font-weight: bold;
        }

        .title-bar {
            width: 100%;
            height: 3rem;
            padding-top: 1rem;
            background-color: bisque;
            display: flex;
            flex-direction: row;
            justify-content: center;
            box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        }

        .outer-container {
            height: 100vh;
        }

        .container {
            height: 100%;
            display: flex;
            flex-direction: row;
        }

        .compose-container {
            padding: 5rem;
            width: 100%;
            box-sizing: border-box;
        }

        #content {
            width: 40rem;
            height: 20rem;
        }
    </style>
</head>

<body>
    <div class="outer-container">
        <div class="title-bar">
            <h2>
                Welcome <%= username %>
            </h2>
            <button class="sign-out-btn" onclick="signOut()">Sign out</button>

        </div>
        <div class="container">
            <div class="side-nav">
                <a class="nav-item" href="/compose">Compose</a>
                <a class="nav-item" href="/inbox">Inbox</a>
                <a class="nav-item" href="/outbox">Outbox</a>
            </div>
            <div class="compose-container">
                <form action="/compose" method="post" style="display: flex;flex-direction: column;gap: 1rem;">
                    <div>
                        <label for="userSelect">Select a receiver:</label>
                        <select name="receiver" id="userSelect">
                            <% users.forEach(user=> { %>
                                <option value="<%= user.id %>">
                                    <%= user.name %> - <%= user.email %>
                                </option>
                                <% }); %>
                        </select>
                    </div>
                    <label for="subject">Subject</label>
                    <input type="text" name="subject" id="subject" style="height: 2rem;width: 40rem;">
                    <label for="content">Content</label>
                    <textarea name="content" id="content"></textarea>
                    <input type="hidden" name="sender" value="<%= username %>">
                    <button type="submit" style="width: 5rem;height: 3rem;">Submit</button>
                </form>
            </div>
        </div>
    </div>
</body>
